\def\ncHarc@i{\check@arrow{\ncHarc@ii}}
\def\ncHarc@ii#1#2{\nc@object{Open}{#1}{#2}{.5}{%
%yB yA sub xB xA sub \tx@Atan
  180
\psk@arcangleA\space sub /AngleA ED
\psk@arcangleB\space %sub 180 add
